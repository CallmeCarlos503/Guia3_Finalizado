<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtDato1"
        android:layout_width="281dp"
        android:layout_height="55dp"
        android:ems="10"
        android:hint="Ingrese el Dato 1"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <EditText
        android:id="@+id/edtDato2"
        android:layout_width="280dp"
        android:layout_height="53dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Ingrese el Dato 2"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edtDato1"
        app:layout_constraintStart_toStartOf="@+id/edtDato1"
        app:layout_constraintTop_toBottomOf="@+id/edtDato1" />

    <EditText
        android:id="@+id/edtDato3"
        android:layout_width="284dp"
        android:layout_height="57dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Ingrese el Dato 3"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edtDato2"
        app:layout_constraintStart_toStartOf="@+id/edtDato2"
        app:layout_constraintTop_toBottomOf="@+id/edtDato2" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="184dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:onClick="entrar"
        android:text="Calcular"
        app:layout_constraintEnd_toEndOf="@+id/edtDato3"
        app:layout_constraintStart_toStartOf="@+id/edtDato3"
        app:layout_constraintTop_toBottomOf="@+id/edtDato3" />

    <ImageView
        android:id="@+id/imvTriangulo"
        android:layout_width="183dp"
        android:layout_height="151dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/btnCalcular"
        app:layout_constraintStart_toStartOf="@+id/btnCalcular"
        app:layout_constraintTop_toBottomOf="@+id/btnCalcular"
        tools:srcCompat="@drawable/equilatero" />

    <TextView
        android:id="@+id/tvTriangulo"
        android:layout_width="205dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/imvTriangulo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imvTriangulo"
        app:layout_constraintTop_toBottomOf="@+id/imvTriangulo" />
</androidx.constraintlayout.widget.ConstraintLayout>